<?xml version="1.0" encoding="gbk" ?>
<!DOCTYPE mapper
        PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="UserExp">

    <!--²éÑ¯È«²¿-->
    <select id="UserExp.queryAll" parameterType="String" resultType="UserExp">
        select * from userexp
    </select>
    <select id="UserExp.queryByUser" parameterType="User" resultType="com.user.service.dbservice.domain.UserExp">
        select * from userexp where userid='${userID}'
    </select>

    <insert id="UserExp.insert" parameterType="UserExp">
        INSERT INTO userexp (
        expid,
        userid,
        expdate,
        expvalue,
        operation,
        currentbalance
        )
        VALUES (
        #{expID},#{userID},#{expDate},#{expValue},#{operation},#{currentBalance}
        );

    </insert>

    <delete id="UserExp.deleteExp" parameterType="UserExp">
        delete from userexp where expid="${expID}"
    </delete>
</mapper>









